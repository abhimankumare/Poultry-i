<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_login_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F4F4">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">



        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin150"
            android:src="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin8"
            android:gravity="center"
            android:text="@string/login"
            android:fontFamily="@font/montserrat"
            android:textColor="#3E3E3E"
            android:textSize="@dimen/margin20"
            android:textStyle="bold">

        </androidx.appcompat.widget.AppCompatTextView>

        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />



        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/ed_username"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin45"
                android:fontFamily="@font/montserrat"
                android:background="@drawable/textview_background"
                android:hint="@string/username"
                android:padding="@dimen/margin10"
                android:textColorHint="#D0D0D0">

            </androidx.appcompat.widget.AppCompatEditText>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin10">

                <EditText
                    android:id="@+id/ed_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin45"
                    android:inputType="textPassword"
                    android:text=""
                    android:fontFamily="@font/montserrat"
                    android:background="@drawable/textview_background"
                    android:hint="@string/password"
                    android:padding="@dimen/margin10"
                    android:textColorHint="#D0D0D0"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/show_pass_btn"
                    android:layout_width="@dimen/margin40"
                    android:layout_height="@dimen/margin40"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin5"
                    android:alpha=".5"
                    android:padding="@dimen/margin5"
                    android:src="@drawable/eye" />
            </RelativeLayout>
<!--            <androidx.appcompat.widget.AppCompatEditText-->
<!--                android:id="@+id/ed_password"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="@dimen/margin45"-->
<!--                android:layout_marginTop="@dimen/margin10"-->
<!--                android:background="@drawable/textview_background"-->
<!--                android:hint="@string/password"-->
<!--                android:padding="@dimen/margin10"-->
<!--                android:textColorHint="#D0D0D0"/>-->



            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_forget"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin2"
                    android:layout_marginTop="@dimen/margin5"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat"
                    android:singleLine="true"
                    android:textColor="#626262"
                    android:textSize="@dimen/margin13"
                    android:textStyle="bold" />


            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_signin"
                android:layout_width="@dimen/margin200"
                android:layout_height="@dimen/margin40"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/footer_backgroud"
                android:gravity="center"
                android:text="@string/Signin"
                android:fontFamily="@font/montserrat"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>




</LinearLayout>