<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin10"
            android:padding="@dimen/margin0"
            android:background="@drawable/textview_background"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="@dimen/margin0"
                    android:layout_height="@dimen/margin150"
                    android:orientation="vertical"
                    android:background="@color/color_blue"
                    android:layout_weight="0.25">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin80"
                    android:layout_weight="0.30"
                    android:padding="@dimen/margin10"
                    android:id="@+id/img_temp"
                    android:src="@drawable/temperature"
                    android:background="@color/color_blue">
                </ImageView>

                    <TextView
                        android:id="@+id/tv_summer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat"
                        android:textSize="@dimen/margin15"
                        android:textColor="@color/white"
                        android:layout_marginBottom="@dimen/margin20"
                        android:text="@string/username">
                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/margin0"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/machname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/margin15"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/margin4"
                        android:padding="@dimen/margin2"
                        android:text="@string/username"/>

                    <TextView
                        android:id="@+id/machntemp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/margin22"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/black"
                        android:padding="@dimen/margin2"
                        android:text="@string/username"/>

                    <TextView
                        android:id="@+id/machninstemptext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/margin15"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:textColor="@color/color_ray"
                        android:paddingTop="@dimen/margin2"
                        android:paddingLeft="@dimen/margin4"
                        android:paddingRight="@dimen/margin4"
                        android:paddingBottom="@dimen/margin4"
                        android:text="@string/username"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin12"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/margin50"
                            android:layout_weight="0.1"
                            android:layout_marginTop="-5dp"
                            android:src="@drawable/dateicon"/>

                        <TextView
                            android:id="@+id/datemach"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/margin14"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_weight="0.4"
                            android:fontFamily="@font/montserrat"
                            android:text="@string/username"
                            android:layout_marginTop="@dimen/margin10"
                            android:layout_marginLeft="4dp" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/margin50"
                            android:layout_weight="0.1"
                            android:layout_marginTop="-5dp"
                            android:src="@drawable/timeicon"/>

                        <TextView
                            android:id="@+id/timemach"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/margin14"
                            android:textStyle="bold"
                            android:fontFamily="@font/montserrat"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="@dimen/margin10"
                            android:textColor="@color/black"
                            android:layout_weight="0.4"
                            android:text="@string/username"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>